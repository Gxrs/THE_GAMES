        printf("\t\t   |_|  |_|\\___|    |_|\\__,_|\\___|    |_|\\___/ \\___|\n\n\n");
   }

   void drawSpielfeld(){

        title();
        printf("\t\t\t\t%s%c%s%c%s\n",x1,a,x2,a,x3);
