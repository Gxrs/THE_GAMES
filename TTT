        printf("\t\t\t\t%s%c%s%c%s\n",x1,a,x2,a,x3);
        printf("\t\t\t\t%s%c%s%c%s\n",x1,a,x2,a,x3);

   }

int pos=0;

void cursor(){
    int input;
    pos=pos%4;

    input=getch();
    if (input == 13){
       //ENTER MIT POS
    }else if (input == 0xE0){
        input = getch();
    };

    switch(input){
        case 72:    pos--;break;
        case 80:    pos++;break;
        case 75:    break;
        case 77:    break;

        }
    }

    void menue(){


        system("cls");
        title();
        pos=pos%4;

        switch(pos){
            case 0:
                printf("\t\t\t\t%c Play\n\t\t\t\t Highscores\n\t\t\t\t Help\n\t\t\t\t Exit\n",e);
                break;
            case 1:
                printf("\t\t\t\t Play\n\t\t\t\t%c Highscores\n\t\t\t\t Help\n\t\t\t\t Exit\n",e);
                break;
            case 2:
                printf("\t\t\t\t Play\n\t\t\t\t Highscores\n\t\t\t\t%c Help\n\t\t\t\t Exit\n",e);
                break;
            case 3:
                printf("\t\t\t\t Play\n\t\t\t\t Highscores\n\t\t\t\t Help\n\t\t\t\t%c Exit\n",e);
                break;
    }
    cursor();
    menue();
}


int main()
{

    menue();

        return 0;
